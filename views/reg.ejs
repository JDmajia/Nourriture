<form class="form-horizontal" method="post">
<fieldset>
    <legend>Register</legend>
    <div class="control-group">
        <label class="control-label" for="username">Telphone</label>
        <div class="controls">
            <input type="text" class="input-xlarge" id="username" name="username">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="password">Password</label>
        <div class="controls">
            <input type="text" class="input-xlarge" id="password" name="password">
        </div>
    </div>
    <div class="control-group">
         <label class="control-label" for="password-repeat">Confirm</label>
         <div class="controls">
             <input type="text" class="input-xlarge" id="password-repeat" name="password-repeat">
         </div>
     </div>
     <div class="form-actions">
        <button type="submit" class="btn btn-primary">Join Us</button>
     </div>
</fieldset>
</form>